model mission {
  id   Int    @id @default(autoincrement())
  name String
  type String

  logs mission_log[]
}

model mission_log {
  id         Int      @id @default(autoincrement())
  mission_id Int
  user_id    Int?
  status     String
  details    String?
  timestamp  DateTime @default(now())

  mission mission @relation(fields: [mission_id], references: [id])
}
